        <Button x:Name="BotonAceptar" Content="{x:Static p:Resources.ETIQUETA_GENERAL_ACEPTAR}" HorizontalAlignment="Center" Margin="0,595,0,0" VerticalAlignment="Top" Height="72" Width="268" FontSize="36" Background="#FF03A64A" Foreground="White" FontWeight="Bold" Click="AccionAceptar">
