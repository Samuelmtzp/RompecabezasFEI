<Page x:Class="RompecabezasFei.PaginaMenuPrincipal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RompecabezasFei"
      xmlns:p="clr-namespace:RompecabezasFei.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Image Margin="142,107,874,357" Source="/Imagenes/Logos/RompecabezasFEI.png" Stretch="Fill"/>
        <Label Content="{x:Static p:Resources.ETIQUETA_GENERAL_ROMPECABEZASFEI}" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="126,370,0,0" VerticalAlignment="Top" FontSize="32" FontWeight="Bold" Foreground="White" Width="305"/>
        <Button Name="BotonCrearSala" HorizontalAlignment="Left" Margin="595,107,0,0" VerticalAlignment="Top" FontSize="36" Height="110" Width="549" Background="#FF03A64A" Click="AccionCrearSala">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Imagenes/Indicadores/CrearSala.png" Height="93" Width="93" HorizontalAlignment="Left"/>
                <Label Content="{x:Static p:Resources.BOTON_MENUPRINCIPAL_CREACIONSALA}" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="32" FontWeight="Bold" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button Name="BotonUnirseASala" HorizontalAlignment="Left" Margin="595,265,0,0" VerticalAlignment="Top" FontSize="36" Height="110" Width="549" Background="#FF048ABF" Click="AccionUnirseASala">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Imagenes/Indicadores/UnirseASala.png" Height="93" Width="93"/>
                <Label Content="{x:Static p:Resources.BOTON_MENUPRINCIPAL_UNIRSESALA}" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="32" FontWeight="Bold" Foreground="White"/>
            </StackPanel>
        </Button>

        <Image Source="/Imagenes/Indicadores/CerrarSesion.png" HorizontalAlignment="Left" Height="82" Margin="526,510,0,0" VerticalAlignment="Top" Width="82" MouseDown="AccionCerrarSesion"/>
        <Label Content="{x:Static p:Resources.ETIQUETA_MENUPRINCIPAL_CERRARSESION}" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="492,592,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24" Width="148"/>
        <Image Source="/Imagenes/Indicadores/Amigos.png" HorizontalAlignment="Left" Height="82" Margin="733,510,0,0" VerticalAlignment="Top" Width="82" MouseDown="AccionMisAmigos"/>
        <Label Content="{x:Static p:Resources.ETIQUETA_GENERAL_AMIGOS}" HorizontalAlignment="Left" Margin="707,592,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24"/>
        <Image Name="Imagen_AvatarUsuario" HorizontalAlignment="Left" Height="82" Margin="909,510,0,0" VerticalAlignment="Top" Width="82" MouseDown="AccionMiPerfil"/>
        <Label Content="{x:Static p:Resources.ETIQUETA_MENUPRINCIPAL_PERFIL}" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="886,592,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24" Width="132"/>
        <Image Source="/Imagenes/Indicadores/Ajustes.png" HorizontalAlignment="Left" Height="82" Margin="1059,510,0,0" VerticalAlignment="Top" Width="82" MouseDown="AccionAjustes"/>
        <Label Content="{x:Static p:Resources.ETIQUETA_GENERAL_AJUSTES}" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="1046,592,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24" Width="107"/>
    </Grid>
</Page>
