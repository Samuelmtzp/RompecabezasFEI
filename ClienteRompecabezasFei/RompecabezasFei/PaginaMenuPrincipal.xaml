<Page x:Class="RompecabezasFei.PaginaMenuPrincipal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RompecabezasFei"
      xmlns:p="clr-namespace:RompecabezasFei.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="PaginaMenuPrincipal">
    <Grid>
        <Image Margin="142,107,874,357" Source="/Imagenes/Logos/RompecabezasFEI.png" Stretch="Fill"/>
        <Label Content="{x:Static p:Resources.RompecabezasFEI}"  HorizontalAlignment="Left" Margin="126,370,0,0" VerticalAlignment="Top" FontSize="32" FontWeight="Bold" Foreground="White"/>
        <Button Name="BotonCrearSala" HorizontalAlignment="Left" Margin="595,107,0,0" VerticalAlignment="Top" FontSize="36" Height="110" Width="549" Background="#FF03A64A" Click="BotonCrearSala_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Imagenes/Indicadores/CrearSala.png" Height="93" Width="93" HorizontalAlignment="Left"/>
                <Label Content="{x:Static p:Resources.CrearNuevaSala}" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="32" FontWeight="Bold" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button Name="BotonUnirseASala" HorizontalAlignment="Left" Margin="595,265,0,0" VerticalAlignment="Top" FontSize="36" Height="110" Width="549" Background="#FF048ABF" Click="BotonUnirseASala_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Imagenes/Indicadores/UnirseASala.png" Height="93" Width="93"/>
                <Label Content="{x:Static p:Resources.UnirseSala}" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="32" FontWeight="Bold" Foreground="White"/>
            </StackPanel>
        </Button>

        <Image Source="/Imagenes/Indicadores/CerrarSesion.png" HorizontalAlignment="Left" Height="82" Margin="526,510,0,0" VerticalAlignment="Top" Width="82" MouseDown="ImagenCerrarSesion_Click"/>
        <Label Content="{x:Static p:Resources.CerrarSesion}" HorizontalAlignment="Left" Margin="492,592,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24"/>
        <Image Source="/Imagenes/Indicadores/Amigos.png" HorizontalAlignment="Left" Height="82" Margin="733,510,0,0" VerticalAlignment="Top" Width="82" MouseDown="ImagenMisAmigos_Click"/>
        <Label Content="{x:Static p:Resources.MisAmigos}" HorizontalAlignment="Left" Margin="707,592,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24"/>
        <Image Source="/Imagenes/Avatares/Invitado.png" HorizontalAlignment="Left" Height="82" Margin="909,510,0,0" VerticalAlignment="Top" Width="82" MouseDown="ImagenMiPerfil_Click"/>
        <Label Content="{x:Static p:Resources.MiPerfil}" HorizontalAlignment="Left" Margin="900,592,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24"/>
        <Image Source="/Imagenes/Indicadores/Ajustes.png" HorizontalAlignment="Left" Height="82" Margin="1058,510,0,0" VerticalAlignment="Top" Width="82" MouseDown="ImagenAjustes_Click"/>
        <Label Content="{x:Static p:Resources.Ajustes}" HorizontalAlignment="Left" Margin="1058,592,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24"/>
    </Grid>
</Page>
