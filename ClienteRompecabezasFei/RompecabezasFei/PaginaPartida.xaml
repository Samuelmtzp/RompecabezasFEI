<Page x:Class="RompecabezasFei.PaginaPartida"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RompecabezasFei"
      xmlns:p="clr-namespace:RompecabezasFei.Properties"
      mc:Ignorable="d"
      d:DesignHeight="720" d:DesignWidth="1280"
      Loaded="EventoPaginaCargada"
      Unloaded="EventoPaginaOcultada">
    <Grid>
        <Label Content="{x:Static p:Resources.ETIQUETA_PARTIDA_TIEMPORESTANTE}" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="969,182,0,0" VerticalAlignment="Top" Height="58" Width="291" FontSize="32" Foreground="White" FontWeight="Bold"/>
        <Label Name="etiquetaTiempoRestante" HorizontalAlignment="Left" Margin="1067,245,0,0" VerticalAlignment="Top" Width="94" Foreground="White" Content="00:00" FontWeight="Bold" FontSize="32" HorizontalContentAlignment="Center" Height="48"/>
        <Canvas Name="tableroRompecabezas" Margin="30,99,350,81" Width="900" Height="540"/>
        <Button Name="botonIniciar" Content="Iniciar" HorizontalAlignment="Left" VerticalAlignment="Top" Height="56" Width="270" Click="EventoClickIniciar" Margin="979,549,0,0" Background="#03A64A" Foreground="White" FontWeight="Bold" FontSize="32"/>
        <Image Source="/Imagenes/Indicadores/Ajustes.png" HorizontalAlignment="Left" Height="82" Margin="1155,15,0,0" VerticalAlignment="Top" Width="82" MouseDown="EventoClickAjustes"/>
        <Label Content="{x:Static p:Resources.ETIQUETA_GENERAL_AJUSTES}" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="1143,97,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24" Width="106"/>
    </Grid>
</Page>
